{
  "compilerOptions": {
    "target": "ES2017", 
    "module": "ESNext", 
    "lib": [
      "es6",
      "dom"
    ], 
    "removeComments": true,
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}